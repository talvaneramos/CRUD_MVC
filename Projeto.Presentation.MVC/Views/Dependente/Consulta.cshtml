
@{    
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Consulta de Dependentes</h1>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-6">
            <div class="form-row">
                <div class="col">
                    <input name="nome" type="text" class="form-control" placeholder="Informe nome do Dependente" value="@TempData["Nome"]" autocomplete="off">
                </div>

                <div class="col">
                    <input type="submit" value="Pesquisar Dependentes" class="btn btn-secondary" placeholder="Informe nome do Dependente" autocomplete="off">
                </div>
            </div>

        </div>

    </div>
}

<br />

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Nome do Dependente</th>
            <th>Data de Nascimento</th>
            <th>Cliente</th>
            <th>Operações</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                <td></td>
                <td>
                    <a href="/Dependente/Edicao?id=@item.IdDependente" 
                       class="btn btn-primary btn-sm">Atualizar</a>

                    <a href="/Dependente/Exclusao?id=@item.IdDependente"  onclick="return confirm('Deseja realmente excluir o registro?');"
                       class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }        

    </tbody>
    <tfoot>
        <tr>
            <td colspan="4">Quantidade de dependentes: 0</td>
        </tr>
    </tfoot>
</table>

